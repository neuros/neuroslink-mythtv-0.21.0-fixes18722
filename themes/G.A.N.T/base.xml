<mythuitheme>

  <window name="backgroundwindow">
    <imagetype name="backimg">
      <filename>bkg/grey.png</filename>
      <staticsize>-1,-1</staticsize>
    </imagetype>

    <imagetype name="logo">
      <filename>myth_logo.png</filename>
      <position>20,170</position>
      <alphapulse min="0" max="255" change="1"/>
    </imagetype>

    <font name="small" face="Arial">
      <color>#FFFFFF</color>
      <size>14</size>
      <size:small>12</size:small>
      <size:big>16</size:big>
      <bold>yes</bold>
    </font>

    <font name="medium" face="Arial">
      <color>#FFFFFF</color>
      <size>16</size>
      <size:small>14</size:small>
      <size:big>20</size:big>
      <bold>yes</bold>
    </font>

    <font name="large" face="Arial">
      <color>#FFFFFF</color>
      <size>20</size>
      <size:small>18</size:small>
      <size:big>22</size:big>
      <bold>yes</bold>
    </font>

    <font name="clock" face="Arial">
       <color>#FFFFFF</color>
       <size>16</size>
       <size:small>14</size:small>
       <size:big>18</size:big>
       <bold>yes</bold>
       <outlinesize>2</outlinesize>
       <outlinecolor>black</outlinecolor>
    </font>

    <clock name="clock">
       <area>340,32,415,50</area>
       <font>clock</font>
       <align>right</align>
       <format>%DATE% %TIME%</format>
       <alpha>200</alpha>
    </clock>
  </window>

</mythuitheme>

