<mythuitheme>

  <window name="status">

    <font name="active" face="Arial">
      <color>#ffffff</color>
      <size>17</size>
      <bold>yes</bold>
    </font>

    <font name="title" face="Arial">
      <color>#ffffff</color>
      <size>18</size>
      <bold>yes</bold>
      <shadow>2,2</shadow>
    </font>

    <font name="selected" face="Arial">
      <color>#ffff33</color>
      <size>17</size>
      <bold>yes</bold>
      <shadow>2,1</shadow>
    </font>

    <font name="status" face="Arial">
      <color>#ffffff</color>
      <size>14</size>
      <bold>yes</bold>
    </font>

    <font name="status_selected" face="Arial">
      <color>#ffff33</color>
      <size>14</size>
      <bold>yes</bold>
    </font>

    <font name="status_error" face="Arial">
      <color>#ff0000</color>
      <size>14</size>
      <bold>yes</bold>
    </font>

    <font name="status_warning" face="Arial">
      <color>#ff8429</color>
      <size>14</size>
      <bold>yes</bold>
    </font>

    <container name="topbar">
      <area>0,0,800,200</area>
      <textarea name="heading" draworder="0">
        <area>30,10,740,40</area>
        <font>title</font>
        <value>System Status - Select a category to view the status</value>
      </textarea>
      <textarea name="helptext" draworder="0">
        <area>30,60,740,150</area>
        <font>title</font>
        <value>This screen displays the status of various system components</value>
        <multiline>yes</multiline>
      </textarea>
    </container>

    <container name="selector">
      <area>0,201,255,600</area>
      <listarea name="icon_list" draworder="2">
       <area>40,30,235,350</area>
       <fcnfont name="active" function="active"></fcnfont>
       <fcnfont name="active" function="inactive"></fcnfont>
       <fcnfont name="selected" function="selected"></fcnfont>
       <column number="1" width="200" context="-1"></column>
       <items>8</items>
      </listarea>
      <image name="iconlines" draworder="0" fleximage="no">
        <filename>cr-lines.png</filename>
        <position>20,0</position>
        <staticsize>235,410</staticsize>
      </image>
      <image name="iconbg" draworder="1" fleximage="no">
        <filename>trans-cr-background.png</filename>
        <position>20,0</position>
        <staticsize>235,410</staticsize>
      </image>
    </container>

    <container name="content">
      <area>265,201,535,600</area>
      <listarea name="list_area" draworder="2">
       <area>15,20,490,345</area>
       <fcnfont name="status" function="active"></fcnfont>
       <fcnfont name="status" function="inactive"></fcnfont>
       <fcnfont name="status_selected" function="selected"></fcnfont>
       <fcnfont name="status_error" function="error"></fcnfont>
       <fcnfont name="status_warning" function="warning"></fcnfont>
       <column number="1" width="480" context="-1"></column>
       <items>11</items>
       <image function="selectionbar" filename="status-bar.png" location="-3,-2"></image>
       <image function="uparrow" filename="uparrow.png" location="475,18"></image>
       <image function="downarrow" filename="downarrow.png" location="475,305"></image>
      </listarea>
      <image name="datalines" draworder="0" fleximage="no">
        <filename>cr-lines.png</filename>
        <position>0,0</position>
        <staticsize>510,410</staticsize>
      </image>
      <image name="databg" draworder="1" fleximage="no">
        <filename>trans-cr-background.png</filename>
        <position>0,0</position>
        <staticsize>510,410</staticsize>
      </image>
    </container>

  </window>

</mythuitheme>

