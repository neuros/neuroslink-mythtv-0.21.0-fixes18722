<mythuitheme>

  <window name="gallery">
    <font name="inactive" base="list-inactive">
    </font>

    

    <container name="menu">
      <area>20,20,140,500</area>

      <listbtnarea name="menu" draworder="0">
        <area>0,0,140,200</area>
        <gradient type="unselected" start="#000000" end="#505050" alpha="100">
        </gradient>
        <gradient type="selected" start="#52CA38" end="#349838" alpha="255">
        </gradient>
        <fcnfont name="list-active" function="active"></fcnfont>
        <fcnfont name="list-inactive" function="inactive"></fcnfont>
        <showarrow>no</showarrow>
        <showscrollarrows>no</showscrollarrows>
      </listbtnarea>

      <listbtnarea name="submenu" draworder="0">
        <area>0,220,140,500</area>
        <gradient type="unselected" start="#000000" end="#505050" alpha="100">
        </gradient>
        <gradient type="selected" start="#52CA38" end="#349838" alpha="255">
        </gradient>
        <fcnfont name="list-active" function="active"></fcnfont>
        <fcnfont name="list-inactive" function="inactive"></fcnfont>
        <showarrow>no</showarrow>
        <showscrollarrows>no</showscrollarrows>
      </listbtnarea>

    </container>

    <container name="text">

      <area>170,20,620,35</area>
      <textarea name="text" draworder="0">
        <area>30,0,620,35</area>
        <font>title</font>
        <multiline>no</multiline>
      </textarea>

    </container>

    <container name="view">
      <area>170,60,620,510</area>

      <blackhole name="view" draworder="0">
            <area>0,0,620,490</area>
      </blackhole>

      <image name="scrollUpReg" draworder="0" fleximage="no">
        <context>0</context>
        <filename>lb-uparrow-reg.png</filename>
        <position>550,490</position>
      </image>

      <image name="scrollUpSel" draworder="0" fleximage="no">
        <context>1</context>
        <filename>lb-uparrow-sel.png</filename>
        <position>550,490</position>
      </image>

      <image name="scrollDnReg" draworder="1" fleximage="no">
        <context>0</context>
        <filename>lb-dnarrow-reg.png</filename>
        <position>580,490</position>
      </image>

      <image name="scrollDnSel" draworder="1" fleximage="no">
        <context>1</context>
        <filename>lb-dnarrow-sel.png</filename>
        <position>580,490</position>
      </image>

    </container>

  </window>
 
</mythuitheme>
